@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pantalla de Login</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        }

        .login-container {
            text-align: center;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .login-container img {
                width: 100px;
                margin-bottom: 20px;
            }

            .login-container h1 {
                margin-bottom: 20px;
                font-size: 24px;
                color: #343a40;
            }

        .google-btn, .logout-btn {
            background: #4285f4;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            transition: background 0.3s;
            text-decoration: none; /* To remove the underline */
            margin-top: 10px; /* Space between buttons */
        }

            .google-btn img, .logout-btn img {
                width: 20px;
                height: 20px;
                margin-right: 10px;
            }

            .google-btn:hover, .logout-btn:hover {
                background: #357ae8;
            }

        .welcome-message {
            margin-top: 20px;
            font-size: 18px;
            color: #343a40;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="~/img/logo-solterout.png" alt="Logo">

        @if (User.Identity.IsAuthenticated)
        {
            <div class="welcome-message">
                <span>Bienvenido, @User.Identity.Name</span>
            </div>
            <a class="logout-btn" asp-controller="Login" asp-action="Logout">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/5f/Icon_SignOut.svg/512px-Icon_SignOut.svg.png" alt="Logout Icon">
                Cerrar sesión
            </a>
        }
        else
        {
            <a class="google-btn" asp-controller="Login" asp-action="Login">
                <img src="https://upload.wikimedia.org/wikipedia/commons/4/4a/Logo_2013_Google.png" alt="Google Logo">
                Iniciar sesión con Google
            </a>
        }
    </div>
</body>
</html>

