            @*   <th>
            @Html.DisplayNameFor(model => model.IdTipoEvento)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.IdPersonaAgasajada)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.IdEstadoEvento)
            </th>*@
